{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": [
      "newsletter",
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-2-desktop"
    ]
  },
  "flex-layout.row#footer-1-desktop": {
    "children": [
      "vtex.menu@2.x:menu#Products",
      "vtex.menu@2.x:menu#footer-clothing",
      "vtex.menu@2.x:menu#footer-decoration",
      "vtex.menu@2.x:menu#footer-bags",
      "footer-spacer",
      "social-networks"
    ],
    "props": {
      "blockClass": "menu-row",
      "paddingTop": 6,
      "paddingBottom": 3
    }
  },

  "social-networks": {
    "props": {
      "socialNetworks": [
        {
          "name": "Facebook",
          "url": "https://www.facebook.com/vtexonline/"
        },
        {
          "name": "Instagram",
          "url": "https://www.instagram.com/vtextruecloud/"
        },
        {
          "name": "Youtube",
          "url": "https://www.youtube.com/user/VTEXTV"
        }
      ]
    }
  },

  "flex-layout.row#footer-2-desktop": {
    "children": ["accepted-payment-methods"],
    "props": {
      "blockClass": "payment-methods"
    }
  },
  "accepted-payment-methods": {
    "props": {
      "paymentMethods": ["MasterCard", "Visa", "Diners Club"]
    }
  },
  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#newsletter",
      "flex-layout.row#1-footer-mobile",
      "flex-layout.row#2-footer-mobile"
    ]
  },
  "flex-layout.row#2-footer-mobile": {
    "children": [
      "flex-layout.row#social-networks",
      "flex-layout.row#payment"],
    "props": {
      "blockClass": "payment-methods",
      "paddingBottom": 4
    }
  },
  "flex-layout.col#footer-1-mobile": {
    "children": [
      "flex-layout.row#social-networks",
      "flex-layout.row#payment"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "rowGap": 4,
      "horizontalAlign": "center",
      "fullWidth":true
    }
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "blockClass":"rowMenu",
      "paddingTop": 4,
      "fullWidth": true
    },
    "children": ["vtex.menu@2.x:menu#footer-mobile"]
  },

  "flex-layout.row#newsletter":{
    "children":["newsletter"]
  },

  "flex-layout.row#social-networks":{
    "children":[
      "social-networks",
      "flex-layout.row#badges1"
    ],
    "props": {
      "blockClass":"finalRow",
      "fullWidth": true,
      "horizontalAlign": "center"
    }
  },
  "flex-layout.row#badges1":{
    "children":[
      "image#letsEncrypt",
      "image#ebit",
      "image#pci"
    ],
    "props":{
      "blockClass": "badges1"
    }
  },
  "image#letsEncrypt":{
    "props":{
      "maxHeight": 61,
      "maxWidth": 205,
      "src": "assets/letsencrypt.png",
      "blockClass":"banners"
    }
  },
  "image#ebit":{
    "props":{
      "maxHeight": 61,
      "maxWidth": 205,
      "src": "assets/ebit.png",
      "blockClass":"banners"
    }
  },
  "image#pci":{
    "props":{
      "maxHeight": 61,
      "maxWidth": 205,
      "src": "assets/pci.png",
      "blockClass":"banners"
    }
  },
  "flex-layout.row#payment":{
    "children":["accepted-payment-methods"],
    "props": {
      "blockClass":"finalRow",
      "fullWidth": true,
      "horizontalAlign": "center"
    }
  }
}
