{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": [
      "newsletter",
      "flex-layout.row#footer-1-desktop"
    ]
  },
  "flex-layout.row#footer-1-desktop": {
    "children": [
      "vtex.menu@2.x:menu#footer-sobre-desktop",
      "vtex.menu@2.x:menu#footer-atendimento-desktop",
      "vtex.menu@2.x:menu#footer-ajuda-desktop",
      "flex-layout.col#pagamentos",
      "social-networks"
    ],
    "props": {
      "blockClass": "menu-row",
      "paddingTop": 6,
      "paddingBottom": 3
    }
  },
  "flex-layout.col#pagamentos":{
    "children":[
      "rich-text#pagamentos",
      "flex-layout.row#footer-2-desktop"
    ]
  },
  "rich-text#pagamentos":{
    "props":{
      "text": "Pagamentos",
      "textAlignment": "LEFT",
      "textPosition": "LEFT",
      "blockClass": "pagamentos"
    }
  },

  "social-networks": {
    "props": {
      "socialNetworks": [
        {
          "name": "Facebook",
          "url": "https://www.facebook.com/vtexonline/"
        },
        {
          "name": "Instagram",
          "url": "https://www.instagram.com/vtextruecloud/"
        },
        {
          "name": "Youtube",
          "url": "https://www.youtube.com/user/VTEXTV"
        }
      ]
    }
  },

  "flex-layout.row#footer-2-desktop": {
    "children": [
      "image#visa",
      "image#masterCard",
      "image#dinersClub",
      "image#ameriEx",
      "image#elo",
      "image#boleto"
    ],
    "props": {
      "blockClass": "payment-methods-desktop"
    }
  },
  "image#visa":{
    "props":{
      "maxHeight": 31,
      "maxWidth": 115,
      "src": "assets/visa.png"
    }
  },
  "image#masterCard":{
    "props":{
      "maxHeight": 31,
      "maxWidth": 115,
      "src": "assets/master.png"
    }
  },
  "image#dinersClub":{
    "props":{
      "maxHeight": 31,
      "maxWidth": 115,
      "src": "assets/diners.png"
    }
  },
  "image#ameriEx":{
    "props":{
      "maxHeight": 31,
      "maxWidth": 115,
      "src": "assets/amex.png"
    }
  },
  "image#elo":{
    "props":{
      "maxHeight": 31,
      "maxWidth": 115,
      "src": "assets/elo.png"
    }
  },
  "image#boleto":{
    "props":{
      "maxHeight": 31,
      "maxWidth": 115,
      "src": "assets/boleto.png"
    }
  },
  "accepted-payment-methods": {
    "props": {
      "paymentMethods": ["MasterCard", "Visa", "Diners Club"]
    }
  },
  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#newsletter",
      "flex-layout.row#1-footer-mobile",
      "flex-layout.row#2-footer-mobile"
    ]
  },
  "flex-layout.row#2-footer-mobile": {
    "children": [
      "flex-layout.row#social-networks",
      "flex-layout.row#payment",
      "flex-layout.row#badges1",
      "flex-layout.row#allRights"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingBottom": 4
    }
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "blockClass":"rowMenu",
      "paddingTop": 4,
      "fullWidth": true
    },
    "children": ["vtex.menu@2.x:menu#footer-mobile"]
  },

  "flex-layout.row#newsletter":{
    "children":["newsletter"]
  },

  "flex-layout.row#social-networks":{
    "children":[
      "social-networks"
    ],
    "props": {
      "fullWidth": true,
      "horizontalAlign": "center",
      "blockClass": "socialNetworks"
    }
  },
  "flex-layout.row#badges1":{
    "children":[
      "image#letsEncrypt",
      "image#ebit",
      "image#pci"
    ],
    "props":{
      "blockClass": "badges1",
      "fullWidth": true
    }
  },
  "image#letsEncrypt":{
    "props":{
      "maxHeight": 31,
      "maxWidth": 115,
      "src": "assets/letsencrypt.png"
    }
  },
  "image#ebit":{
    "props":{
      "maxHeight": 41,
      "maxWidth": 43,
      "src": "assets/ebit.png"
    }
  },
  "image#pci":{
    "props":{
      "maxHeight": 38,
      "maxWidth": 62,
      "src": "assets/pci.png"
    }
  },
  "flex-layout.row#payment":{
    "children":[
      "image#visa",
      "image#masterCard",
      "image#dinersClub",
      "image#ameriEx",
      "image#elo",
      "image#boleto"],
    "props": {
      "blockClass":"payment",
      "fullWidth": true,
      "horizontalAlign": "center"
    }
  },
  "flex-layout.row#allRights":{
    "children":[
      "rich-text#avanti",
      "flex-layout.row#avantiVTEX"
    ]
  },
  "rich-text#avanti":{
    "props":{
      "text": "AVANTI S.A Â© 2020. TODOS OS DIREITOS RESERVADOS.",
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "blockClass": "allRights"
    }
  },
  "flex-layout.row#avantiVTEX":{
    "children":[
      "image#avanti",
      "image#vtex"
    ],
    "props":{
      "blockClass": "avantiVTEX"
    }
  },
  "image#avanti":{
    "props":{
      "maxHeight": 38,
      "maxWidth": 62,
      "src": "assets/avanti1.png",
      "blockClass":"avantiLogo"
    }
  },
  "image#vtex":{
    "props":{
      "maxHeight": 38,
      "maxWidth": 62,
      "src": "assets/vtex.png"
    }
  }
}
